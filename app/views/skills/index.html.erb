<h1>Listing books</h1>

<table>
  <tr>
    <th>Languages</th>
    <th>Title</th>
    <th>Short</th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.book_translations.map{|t| t.language}.join(',') %></td>
    <td><%= book.book_translations.first.title %></td>
    <td><%= book.book_translations.map{|t| t.short}.join(',') %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

