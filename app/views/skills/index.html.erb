<h1>Listing skills</h1>

<table>
  <tr>
    <th>Languages</th>
    <th>Title</th>
    <th>Short</th>
  </tr>

<% @skills.each do |skill| %>
  <tr>
    <td><%= skill.skill_translations.map{|t| t.language}.join(',') %></td>
    <td><%= skill.skill_translations.first.title %></td>
    <td><%= skill.skill_translations.map{|t| t.short}.join(',') %></td>
    <td><%= link_to 'Show', skill %></td>
    <td><%= link_to 'Destroy', skill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Skill', new_skill_path %>
