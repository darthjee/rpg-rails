<p id="notice"><%= notice %></p>

<table>
    <tr>
        <th>Lang</th>
        <th>Title</th>
        <th>Short</th>
    </tr>

    <% @skill.skill_translations.each do |t| %>
        <tr>
            <td><%= t.language %></td>
            <td><%= t.title %></td>
            <td><%= t.short %></td>
            <td><%= link_to 'Edit', edit_translation_skill_path(@skill, t.language) %></td>
            <td><%= link_to 'Destroy', destroy_translation_skill_path(@skill.id, t.language), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
</table>


